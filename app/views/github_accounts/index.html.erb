<p id="notice"><%= notice %></p>

<h1>Github Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Token</th>
      <th>Metadata</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @github_accounts.each do |github_account| %>
      <tr>
        <td><%= github_account.token %></td>
        <td><%= github_account.metadata %></td>
        <td><%= github_account.user_id %></td>
        <td><%= link_to 'Show', github_account %></td>
        <td><%= link_to 'Edit', edit_github_account_path(github_account) %></td>
        <td><%= link_to 'Destroy', github_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Github Account', new_github_account_path %>
