<p id="notice"><%= notice %></p>

<h1>Github Repositories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @github_repositories.each do |repo| %>
      <tr>
        <td> <%= repo.name %> </td>
        <td> Monitoring: <%= repo.active? ? "\u{2705}" : "\u{1F6AB}" %> </td>
        <td><%= link_to 'Show', repo %></td>
        <td><%= link_to 'Edit', edit_github_repository_path(repo) %></td>
        <td><%= link_to 'Destroy', repo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
